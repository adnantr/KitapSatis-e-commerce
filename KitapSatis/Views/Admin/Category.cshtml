 @model List<KitapSatis.Models.Category>

<div class="border p-4 bg-white">
  <div class="row">
      <div class="col-9">
          <h2 class="text-dark">Ürün listesi</h2>
      </div>

      <div class="col-3 text-right">
          @await Html.PartialAsync("AddCategory")
      </div>
  </div>



  <div>
      @if(Model.Count()>0)
        {
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Kategori Id</th>
                      <th scope="col">Kategori Adı</th>

                      <th scope="col"><i class="bi bi-arrow-down-up"></i></th>
                    </tr>
                  </thead>
                    <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                      <th scope="row">@item.CategoryId</th>
                      <td>@item.CategoryName</td>
                      <td>
                          <a asp-action="" class="text-danger">
                            <i class="bi bi-trash"></i>
                          </a>
                          <a asp-action="" class="primary">
                             <i class="bi bi-upload"></i>
                          </a>
                      </td>
                    </tr>
                }
            </tbody>
            </table>
        }
    </div>

</div>