 @model Category
@{
    var Title = "Kategori Oluştur";
}
  

        <form method="post">
          <div asp-validation-summary="ModelOnly" class="text danger"></div>
          <input type="hidden" asp-for="CategoryId"/>
          @if(Model.CategoryId !=0)
            {
                <p class="fs-3">Kategori Güncelle</p>
                Title = "Kategori Güncelle";
            }
            <div class="col-12 border-bottom text-center">
                <h2 class="text-primary">@Title</h2>
                </div>
            <div class="form-group row">
                <div class="">
                            <input asp-for="CategoryName" placeholder="Ürün isim" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

              
            </div>
             <div class="form-group row">
                                <div class="col-4 offset-4">
                            @if(Model.CategoryId != 0)
                            {
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            }
                        </div>
                            <a asp-action="category" class="btn-primary btn-success form-control">Geri Dön</a>


                            </div>
          
        </form>








   