@model RoleModel

<div class="col-12 bg-dark border-bottom text-center">
            <h2 class="text-light">Rol Ekle</h2>
</div>
<br /><br />
<div class="row">
    <div class="row p-3 m-lg-auto border border-dark rounded form-group" style="width: 60%;">
        <form method="post" asp-controller="Admin" asp-action="RoleCreate">
            <div asp-validation-summary="All" class="text danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name">Kullanıcı Rolü:</label>
                <input asp-for="Name" type="text" placeholder="Customer..." class="form-control" name="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Rolü Ekle</button>
            <a asp-action="RoleList" class="btn btn-warning btn-lg" role="button">Geri Dön</a>
        </form>
    </div>
</div>
