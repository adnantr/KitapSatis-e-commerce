@model RoleDetails

<h1>Rol Düzenle</h1>
<div class="row">
    <div class="col-md-12 mt-5 ml-2">

        <form asp-controller="Admin" asp-action="RoleEdit" method="post">
            <input type="hidden" name="RoleId" value="@Model.Role.Id">
            <input type="hidden" name="RoleName" value="@Model.Role.Name">
            <h6 class="bg-info text-white p-1">Ekle @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if(Model.NonMembers.Count()==0)
                {
                    <tr>
                        <td colspan="2"> Bütün kullanıcılar role ait</td>
                    </tr>
                }else
                {
                    <tr class="fw-bold">
                           <td>Kullanıcı Adı</td>
                           <td>Kullanıcı Id</td>
                           <td>Seç</td>   
                    </tr>
                    @foreach (var item in Model.NonMembers)
                   {
                       <tr>     
                           <td>@item.UserName</td>
                           <td>@item.Id</td>
                           <td style="width:150px;">
                               <input type="checkbox" name="IdsToAdd" value="@item.Id">
                           </td>
                       </tr>
                   }
                }
            </table>

            <hr>


             <h6 class="bg-info text-white p-1">Sil @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if(Model.Members.Count()==0)
                {
                    <tr>
                        <td colspan="2"> Role ait kullanıcı bulunmamaktadır</td>
                    </tr>
                }else
                {
                    <tr>
                           <td>Kullanıcı Adı</td>
                           <td>Kullanıcı Id</td>
                           <td>Seç</td>   
                    </tr>
                    @foreach (var item in Model.Members)
                   {
                       <tr>
                           <td>@item.UserName</td>
                           <td>@item.Id</td>
                           <td style="width:150px;">
                               <input type="checkbox" name="IdsToDelete" value="@item.Id">
                           </td>
                       </tr>
                   }
                }
            </table>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>




    </div>
</div>