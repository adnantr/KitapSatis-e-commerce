@model KitapSatis.Models.Product

         <div class="col-12 bg-dark border-bottom text-center">
            <h2 class="text-light">Kullanıcı Düzenleme</h2>
         </div>
         <br /><br />
        <div class="row p-3 m-lg-auto border border-dark rounded form-group" style="width: 60%;">
       <form asp-controller="admin" asp-action="AddUpdateProduct" method="post">
          
          <div asp-validation-summary="All" class="text danger"></div>
            <input type="hidden" asp-for="ProductId"/>
        
            @if(Model.ProductId !=0)
            {
            <p class="fs-3">Ürün Güncelle</p>
             }
            else
            {
            <p class="fs-3">Ürün Oluştur</p>
            }
                
                    <div class="form-group row ">

                            <div class="form-group row mb-3">
                            <input asp-for="ProductName" placeholder="Ürün isim" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>

                            <div class="form-group row mb-3">
                            <textarea asp-for="ProductDescription" placeholder="Ürün tanım" class="form-control" ></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>

                            <div class="form-group row mb-3">
                            <input asp-for="Price" placeholder="Ürün Fiyat ₺" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group row mb-3">
                            <input asp-for="Stock" placeholder="Ürün Stok" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                              <label class="input-group-text" for="inputGroupFile01">Ürün Görseli</label>
                              <input asp-for="Picture" type="file" class="form-control" id="inputGroupFile01">
                              <span asp-validation-for="Picture" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                              <label class="input-group-text" for="inputGroupSelect01">Ürün Türü</label>
                              <select asp-for="KindId"  class="form-select">
                                <option selected>Tür Seçiniz</option>
                                    @foreach (var item in @ViewBag.kindlist)
                                 {
                                     <option value="@item.KindId">@item.KindName</option>
                                 }
                                
                              </select>
                               <span asp-validation-for="KindId" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                              <label class="input-group-text" for="inputGroupSelect01">Kategori</label>
                              <select asp-for="CategoryId" class="form-select" id="inputGroupSelect01">
                                <option selected>Kategori Seçiniz</option>
                                    @foreach (var item in @ViewBag.categorylist)
                                 {
                                     <option value="@item.CategoryId">@item.CategoryName</option>
                                 }
                                
                              </select>
                            </div>


                            <div class="form-group row ">
                                <div class="col-md-6 offset-md-3">
                                    @if(Model.ProductId != 0)
                                    {
                                        <button type="submit" class="btn btn-primary">Güncelle</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary ">Ekle</button>
                                    }
                                    <a asp-action="product" class="btn btn-warning" role="button">Geri Dön</a>
                               </div>
                           </div>
          </div>            
        </form>
        </div>  


