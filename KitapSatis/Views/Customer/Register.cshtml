@model Customer
@{
    ViewData["Title"] = "User Register Page";
}

<div class="row ">

    <div class="col-md-6 mt-5" style="width: 25rem;">
        <img src="/img/register.png" class="card-img-top">
    </div>
    <div class="col-md-6 mt-5">
        <form method="post">       
            <div asp-validation-summary="ModelOnly" class="text danger"></div>
            <input type="hidden" asp-for="CustomerId"/>

            <div class="form-group">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" type="email" class="form-control" name="Email" aria-describedby="emailHelp" placeholder="email@gmail.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CustomerName">Kullanıcı Adı</label>
                <input asp-for="CustomerName" type="text" class="form-control" name="CustomerName" placeholder="xxx">
            </div>


            <div class="form-group">
                <label asp-for="FirtName">İsim</label>
                <input asp-for="FirtName" type="text" class="form-control" name="FirtName" placeholder="xxx">
            </div>


            <div class="form-group">
                <label asp-for="LastName">Soyisim</label>
                <input asp-for="LastName" type="text" class="form-control" name="LastName" placeholder="xxx">
            </div>


            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" name="Password"  placeholder="Şifre">
               @*<input type="password" class="form-control" placeholder="Şifre tekrar">*@
            </div>


            <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
            <a href="/customer/login" class="text-decoration-none">Zaten bir üyeliğiniz var mı?</a>
            
        </form>
    </div>
</div>
