@model FavoriteModel

<h3>Favorilerim</h3>
<hr />


@if(Model.FavoriteItems.Count==0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                Favorilerinizde ürün bulunmamaktadır.
            </div>
        </div>
    </div>
}
else{
<div class="row">
    <div class="col-md-12">
        <div class="text-left">
            <h4>Favorilerimdeki Ürünler</h4>
        </div>
            <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.FavoriteItems)
           {
               
             <tr>
                <td>
                    <a asp-controller="product"  asp-action="details" asp-route-Id="@item.ProductId">
                    <img src="~/img/productImages/@item.ImageUrl" width="100" alt="">
                    </a>
                </td>
                <td>@item.Name</td>
                <td>@item.Price ₺</td>
                <td>
                    <form method="post" asp-controller="Cart" asp-action="AddCart" style="display:inline> 
                 <input type="hidden" name="ProductId" value="@item.ProductId">
                 <input type="hidden" name="quantity" value="1">
                 <button type="submit" class="btn btn-primary btn-sm">Sepete Ekle</button>
                    </form>

                    <form asp-controller="Favorite" asp-action="DeleteFromFavorite" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId">
                        <button type="submit" class="btn btn-danger btn-sm">
                            Kaldır
                        </button>
                    </form>
                </td>
            </tr>
            
           }
        </tbody>
    </table>
</div>
</div>
}