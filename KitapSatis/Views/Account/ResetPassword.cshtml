@model ResetPasswordModel
@{
    ViewData["Title"] = "Kullanıcı Şifre Sıfırlama";
}

<div class="row">

    <div class="col-md-6 mt-5" style="width: 20rem;">
        <img src="/img/login.png" class="card-img-top">
    </div>
    <div class="col-md-6 mt-5 ml-2">
        <form method="post" asp-controller="Account" asp-action="ResetPassword">
            <input type="hidden" asp-for="Token" />
            <div asp-validation-summary="All" class="text danger"></div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="text" class="form-control" name="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" name="Password"  placeholder="Şifre">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg">Değiştir</button>
            </form>
        
    </div>
</div>
