@model LoginModel
@{
    ViewData["Title"] = "User Login Page";
}

<div class="row">

    <div class="col-md-6 mt-5" style="width: 20rem;">
        <img src="/img/login.png" class="card-img-top">
    </div>
    <div class="col-md-6 mt-5 ml-2">
        <form method="post" asp-controller="Account" asp-action="Login">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
            <div asp-validation-summary="All" class="text danger"></div>
            <div class="form-group">
                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" type="text" class="form-control" name="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" name="Password"  placeholder="Şifre">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg">Giriş</button>
            </form>

            <a href="/account/ForgotPassword" class="btn btn-primary btn-lg">Şifreyi unuttum</a>
            <a href="/account/register" class="text-decoration-none">Üye olmak için..</a>
        
    </div>
</div>
